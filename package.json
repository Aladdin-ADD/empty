{
  "name": "@tplss/node",
  "version": "0.0.0",
  "author": "薛定谔的猫 <hh_2013@foxmail.com>",
  "description": "Node.js boilerplate",
  "main": "./lib/index.js",
  "scripts": {
    "lint": "eslint lib tests",
    "test": "mocha tests/**/*"
  },
  "files": [
    "LICENSE",
    "README.md",
    "lib"
  ],
  "dependencies": {},
  "devDependencies": {
    "eslint": "^6.0.0-alpha.0",
    "eslint-config-ts": "^3.1.0",
    "husky": "^2.4.1",
    "lint-staged": "^8.2.0",
    "mocha": "^6.1.4"
  },
  "keywords": [
    "Node.js",
    "boilerplate"
  ],
  "eslintConfig": {
    "extends": [
      "ts/node"
    ],
    "overrides": [
      {
        "files": [
          "tests/"
        ],
        "env": {
          "mocha": true
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run lint -- --fix && git add ."
    }
  },
  "license": "MIT",
  "engines": {
    "node": ">=8"
  }
}
